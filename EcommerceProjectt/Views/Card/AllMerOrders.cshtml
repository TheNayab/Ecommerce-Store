@{
    ViewBag.Title = "AllMerOrders";

    Layout = "~/Views/_LayoutPage2.cshtml";
    string[] TableHeader = new string[]
    {
        "Image",
        "Product",
        "Price",
        "Name",
        "Address",
        "City",
        "State",
                    };
}
<h2>AllMerOrders</h2>

<nav class="navbar navbar-expand-lg navbar-dark bg-success">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">ECOMMERCE_STORE</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" id="redirect" onclick="@("window.location.href='" + Url.Action("GetAllCard", "Card") + "'")">All-Items</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" id="redirect" onclick="@("window.location.href='" + Url.Action("AddCard", "Card") + "'")">Add-Items</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" id="redirect" onclick="@("window.location.href='" + Url.Action("AllMerOrders", "Card") + "'")">All-Orders</a>
                </li>

            </ul>
            <form action="GetAllCard" method="post" class="d-flex">
                <input class="form-control me-2" type="search" name="SearchString" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-light" type="submit">Search</button>
            </form>
            <div class="logout">

                <a class="btn btn-danger active" aria-current="page" id="redirect" onclick="@("window.location.href='" + Url.Action("login", "Account") + "'")">Will design</a>

            </div>
        </div>
    </div>
</nav>

<div class="main2">
    <table>
        <tr>
            @{
                foreach (var head in TableHeader)
                {
                    <th>
                        @head
                    </th>
                }
            }
        </tr>
        @{
            if (Model != null)
            {
                foreach (var Data in Model)
                {
                    <tr>
                        <td class="picture">   <img src="@Url.Content(Data.Img)" height="100vh" width="80%" alt="" /> </td>
                        <td>@Data.NameOfProduct</td>
                        <td>@Data.PriceOfProduct</td>
                        <td class="quantity">@Data.Fname</td>
                        <td class="quantity">@Data.Address</td>
                        <td class="quantity">@Data.City</td>
                        <td class="quantity">@Data.State</td>
                    </tr>
                }
            }
        }
    </table>
</div>
