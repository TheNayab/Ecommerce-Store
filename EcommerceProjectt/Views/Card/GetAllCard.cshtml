
@{
    ViewBag.Title = "AllItems";
    Layout = "~/Views/_LayoutPage2.cshtml";
    string[] TableHeader = new string[]
    {
        "Id",
        "Image",
        "Name",
        "Description",
        "Edit",
        "Delete"
    };
}

<nav class="navbar navbar-expand-lg navbar-dark bg-success">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">ECOMMERCE_STORE</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" id="redirect" onclick="@("window.location.href='" + Url.Action("GetAllCard", "Card") + "'")">All-Items</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" id="redirect" onclick="@("window.location.href='" + Url.Action("AddCard", "Card") + "'")">Add-Items</a>
                </li>

            </ul>
            <form action="GetAllCard" method="post" class="d-flex">
                <input class="form-control me-2" type="search" name="SearchString" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-light" type="submit">Search</button>
            </form>
        </div>
    </div>
</nav>

<div class="main2">
    <table>
        <tr>
            @{
              foreach(var head in TableHeader)
            {
                <th>
                    @head
                </th>
            }
            }
        </tr>
        @{
            if(Model != null)
            {
                foreach(var Data in Model)
                {
                <tr>
                    <td>@Data.Id</td>
                    <td class="picture">   <img src="@Url.Content(Data.ImagePath)" height="100vh" width="100%" alt="" /> </td>
                    <td>@Data.Name</td>
                    <td>@Data.Description</td>
                    <td>E</td>
                    <td>D</td>
                </tr>
                }
            }
        }
    </table>
</div>